<article class="fullstory photo-article">
	<h1 class="title">[full-link]{title}[/full-link]</h1>

	<section class="ampstart-related-section mb4">
		<p class="mb4">{link-category} | {date}</p>
	</section>

	<div class="mb4">
		<amp-ad width="100vw" height=320
				type="adsense"
				data-ad-client="ca-pub-5295124462895719"
				data-ad-slot="1033992468"
				data-auto-format="rspv"
				data-full-width>
		  <div overflow></div>
		</amp-ad>
	</div>
	
	<div class="mb4">
		{full-story}

		[xfgiven_taxi-phone]
        <div class="mb4">
        	<p>
        		<a href="tel:[xfvalue_taxi-phone]" class="btn btn-info btn-block">Позвонить [xfvalue_taxi-phone]</a>
        	</p>
        </div>
		[/xfgiven_taxi-phone]

		[xfgiven_taxi-viber]
        <div class="mb4">
        	<p>
            	<a href="viber://chat?number=[xfvalue_taxi-viber]" class="btn btn-info btn-default btn-block">Написать в Вайбер</a>
            </p>
        </div>
		[/xfgiven_taxi-viber]
	</div>

	[xfgiven_tablon]
	<div class="panel panel-primary mb4">
		
		<div class="panel-heading">
			<h2 class="panel-title">Карточка объекта: {title}</h2>
		</div>

		  <ul class="list-group">
			[xfgiven_object]
			<li class="list-group-item small">
				<b>Объект</b>:&emsp;[xfvalue_object]
			</li>
			[/xfgiven_object]

			[xfgiven_street]
			<li class="list-group-item small">
				<b>Адрес</b>:&emsp;[xfvalue_street], [xfvalue_domnomer]
			</li>
			[/xfgiven_street]

			[xfgiven_time]
			<li class="list-group-item small">
				<b>Режим работы</b>:&emsp;[xfvalue_time]
			</li>
			[/xfgiven_time]

			[xfgiven_pereryv]
			<li class="list-group-item small">
				<b>Перерыв</b>:&emsp;[xfvalue_pereryv]
			</li>
			[/xfgiven_pereryv]

			[xfgiven_rabday]
			<li class="list-group-item small">
				<b>Рабочие дни</b>:&emsp;[xfvalue_rabday]
			</li>
			[/xfgiven_rabday]

			[xfgiven_vihodnoy]
			<li class="list-group-item small">
				<b>Выходной</b>:&emsp;[xfvalue_vihodnoy]
			</li>
			[/xfgiven_vihodnoy]

			[xfgiven_sanitarday]
			<li class="list-group-item small">
				<b>Санитарный день</b>:&emsp;[xfvalue_sanitarday]
			</li>
			[/xfgiven_sanitarday]

			[xfgiven_telefon]
			<li class="list-group-item small">
				<b>Телефон</b>:&emsp;[xfvalue_telefon]
			</li>
			[/xfgiven_telefon]
		  </ul>
	</div>
	[/xfgiven_tablon]

	<div class="mb4">
		<a href="{full-link}" class="ampstart-btn">Перейти на сайт</a>
	</div>

</article>
