<div class="card bg-dark text-white w-100 mb-3 rounded-0 border-0">
	<div class="img-gradient crop-box-h390">
		[xfgiven_image]
            <img src="[xfvalue_image_url_image]" class="card-img" alt="">
        [/xfgiven_image]

        [xfnotgiven_image]
        	<img src="/resize?src={image-1}&w=626&h=390&a=c" class="card-img" alt="">
		[/xfnotgiven_image]
	</div>
	<a href="{full-link}" class="stretched-link text-white">
	    <div class="card-img-overlay-bottom">
	        <p class="card-text text-uppercase small">{category} [group=1]<i class="fa fa-eye fa-fw"></i> {views}[/group]</p>
	        <h4 class="card-title font-weight-normal mt-n3">{title}</h4>
	        <p class="card-text font-weight-light">{short-story limit="200"}</p>
	    </div>
    </a>
</div>
