<div class="card border-0  mb-2">
    <div class="embed-responsive embed-responsive-16by9">
        [newscount=1,3,5,7,9,11]
            <img src="https://placeimg.com/640/480/people" class="card-img-top rounded-0 embed-responsive-item" alt="">
        [/newscount]
        [newscount=2,4,6,8,10,12]
            <img src="https://placeimg.com/640/480/tech" class="card-img-top rounded-0 embed-responsive-item" alt="">
        [/newscount] 
    </div>  
    <div class="card-body mx-n4">
        <p class="card-text text-uppercase text-danger">{category}</p>
        <h5 class="card-title">{title}</h5>
        <p class="card-text">{short-story limit="200"}</p>
    </div>
</div>
