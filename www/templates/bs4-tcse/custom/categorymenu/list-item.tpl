[item]
    <div class="list-item list-inline-item pr-2 pb-2">
        <a href="{url}" itemprop="url">
            <span class="title"  itemprop="name">{name}</span> 
            <span class="desc">({news-count})</span> 
            [group=1]<span class="like badge">#{id}</span>[/group]
        </a>           
    </div>
[/item]
